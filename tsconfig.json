{
  "compilerOptions": {    
    "target": "es2016",
    "lib": ["es6"],
    "module": "NodeNext",
    "rootDir": "src",
     "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,        
  },
  "include": ["src/**/*", "types/global.d.ts", "src/packages/multer.tsr.ts"],  
  "ts-node": {
    "files": true
  },  
}
